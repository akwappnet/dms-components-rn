{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "lib": ["esnext", "esnext.asynciterable"]
  },
  "include": ["./src", "./typings"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
